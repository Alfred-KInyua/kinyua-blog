<h1 align='center'>List all users</h1>
<div class='d-flex justify-content-center'><h3><%= will_paginate(@user) %><h3></div>

<table class="table table-striped table-hover">
<thead>
<tr>
         <th scope="col">Username</th>
         <th scope="col">Profile pic</th>
        <th scope="col">Email</th>
       <th scope="col">Articles written</th>
</tr>
<thead>
<%@user.each do|f|%>

<tbody><tr>
<td><%=link_to f.username, user_path(f)%></td>
<td><%=link_to gravatar_for(f),user_path(f)%></td>
<td><%=link_to f.email, user_path(f)%></td>
<td><small><%= pluralize(f.articles.count,"articles") if f.articles%></small></td>

</tr>
</tbody>
<%end%>
</table>
<div class='d-flex justify-content-center'><h3><%= will_paginate(@user) %><h3></div>

